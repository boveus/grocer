<%= form_for [@user, @recipe] do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
   <br />
Ingredient
    <br />
 <%= f.fields_for :recipe_ingredient do |ri| %>
   <%= ri.label "number of" %>
   <%= ri.text_field :number %>
   <% end %>
 <%= f.fields_for :ingredient do |ff| %>
   <%= ff.label :measurement %>
   <%= ff.text_field :measurement %>
   <%= ff.label 'of' %>
   <%= ff.text_field :name %>
   <% end %> <br />
  <%= f.submit %>
<% end %>
