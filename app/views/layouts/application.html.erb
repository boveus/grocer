<!DOCTYPE html>
<html>
  <head>
    <title>Grocer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <%= content_tag :div, message, class: "flash_#{type}" %>
    <% end %>
    <% if current_user %>
      <h4> <%= current_user.name %> is logged in </h4>
      <%= link_to "Logout", logout_path, method: :delete, class: 'link'%>
    <% else %>
    <br />
    <br />
    <% end %>
    <%= yield %>
  </body>
</html>
